    "release:dry": "node release.js --dry-run",
    "version:check": "echo \"Current version: $(node -p 'require(\"./package.json\").version')\""
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "postgresql",
    "postgres",
    "claude",
    "ai",
    "database",
    "sql",
    "introspection",
    "analytics",
    "database-tools"
  ],
  "author": "Nitai Aharoni <nitaiaharoni1@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nitaiaharoni/postgresql-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/nitaiaharoni/postgresql-mcp-server/issues"
  },
  "homepage": "https://github.com/nitaiaharoni/postgresql-mcp-server#readme",
  "files": [
    "server.js",
    "test.js",
    "release.js",
    ".env.example",
    "README.md",
    "LICENSE"
  ],
  "preferGlobal": true,
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "dotenv": "^16.5.0",
    "pg": "^8.16.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.21",
    "@types/pg": "^8.15.2",
    "nodemon": "^3.0.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
