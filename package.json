  "version": "1.0.0",
  "description": "Model Context Protocol server for PostgreSQL database access with comprehensive introspection and analysis tools",
  "main": "server.js",
  "bin": {
    "postgresql-mcp-server": "./server.js"
  },
  "scripts": {
    "start": "node server.js",
    "test": "node test.js",
    "dev": "nodemon server.js",
    "configure": "node server.js --configure",
    "find-config": "node server.js --find-config",
    "prepublishOnly": "npm test",
    "postinstall": "echo '\nðŸŽ‰ PostgreSQL MCP Server installed successfully!\nðŸ“– See README for configuration: https://github.com/nitaiaharoni/postgresql-mcp-server#readme\n'",
